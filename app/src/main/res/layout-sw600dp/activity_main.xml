<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom" />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/bottom"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <me.ibrahimsn.lib.SmoothBottomBar
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:backgroundColor="@color/appbackcolor1"
                app:iconTint="@color/color_textHomeActive"
                app:iconTintActive="@color/color_textHomeInactive"
                app:indicatorColor="@color/pluteblue"
                app:itemFontFamily="@font/nunitosansregular"
                app:menu="@menu/bottom_menu"
                app:textColor="@color/pluteyellow"
                app:textSize="14sp" />

        </RelativeLayout>
    </soup.neumorphism.NeumorphCardView>

</RelativeLayout>
