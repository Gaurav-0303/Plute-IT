<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/neu_card"
    style="@style/Widget.Neumorph.CardView"
    android:layout_width="320dp"
    android:minHeight="320dp"
    android:layout_height="wrap_content"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android App Development"
            android:textColor="@color/pluteblue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="12dp"
            android:maxLines="3"
            android:paddingEnd="12dp"
            android:text="Android App Development is framework of java and it is also used in kotlin"
            android:textColor="@color/pluteblueSubtitle"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtuses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#C39627"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:layout_below="@+id/description" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/txtuses"
            android:visibility="visible" />
    </RelativeLayout>

</soup.neumorphism.NeumorphCardView>
