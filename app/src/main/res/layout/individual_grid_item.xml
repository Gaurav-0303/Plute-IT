<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1">

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/techcard"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:clickable="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/techimg"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="07dp"
                    android:src="@drawable/programing"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>

                <TextView
                    android:id="@+id/textviel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="03dp"
                    android:layout_marginEnd="03dp"
                    android:fontFamily="@font/rubiksemibold"
                    android:gravity="center"
                    android:text="Languages"
                    android:textSize="16sp"
                    style="@style/ItemTextBg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/techimg" />

                <TextView
                    android:id="@+id/textviewlc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="05dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="05dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/rubikregular"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text="languages and frameworks, some more data"
                    android:textColor="#555D60"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textviel" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </soup.neumorphism.NeumorphCardView>
    </LinearLayout>

</RelativeLayout>