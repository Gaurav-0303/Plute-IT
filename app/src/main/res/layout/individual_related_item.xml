<?xml version="1.0" encoding="utf-8"?>

<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/neu_card"
    style="@style/Widget.Neumorph.CardView"
    android:layout_width="250dp"
    android:minHeight="250dp"
    android:layout_height="wrap_content"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android App Development"
            android:textColor="@color/pluteblue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:paddingEnd="8dp"
            android:text="Android App Development is framework of java and it is also used in kotlin"
            android:textColor="@color/pluteblueSubtitle"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/txtuses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#C39627"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:layout_below="@+id/description"
            />
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:layout_marginTop="04dp"
            android:layout_below="@+id/txtuses"
            android:visibility="visible" />



    </RelativeLayout>

</soup.neumorphism.NeumorphCardView>
