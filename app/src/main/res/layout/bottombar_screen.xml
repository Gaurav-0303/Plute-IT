<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"></FrameLayout>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/bottom"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <me.ibrahimsn.lib.SmoothBottomBar
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:iconTint="@color/color_textHomeActive"
                app:iconTintActive="@color/color_textHomeInactive"
                app:indicatorColor="@color/pluteblue"
                app:itemFontFamily="@font/nunitosansregular"
                app:menu="@menu/bottom_menu"
                style="@style/SmoothBottomBar"
                app:textColor="@color/pluteyellow"
                app:textSize="11sp" />
        </RelativeLayout>
    </soup.neumorphism.NeumorphCardView>

</RelativeLayout>